{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "outDir": "dist",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "skipLibCheck": true,
    "target": "es6",
    "typeRoots": [ "./types", "./node_modules/@types"]
  },
  "ts-node": {
    "swc": true
  },
  "exclude": [
    "node_modules/*"
  ]
}
